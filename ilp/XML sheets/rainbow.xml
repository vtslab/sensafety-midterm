<rainbow>

    <!-- Low color range in RGB color system: 0..255 -->
    <lowColor>
        <red> 100 </red>
        <green> 100</green>
        <blauw> 100 </blauw>
    </lowColor>

    <!-- high color range in RGB color system: 0..255 -->
    <highColor2>
        <red> 100 </red>
        <green> 100</green>
        <blauw> 100 </blauw>
    </highColor2>

    <!-- Interval time for repeating rainbow show in ms 0..max int -->
